<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.whattodowhenyourebored.Tell_us_about_yourself">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <Button
            android:id="@+id/home_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:onClick="homeButton"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="#cdc9c9"
            android:text="Tell us about yourself"
            android:textColor="@android:color/black"
            android:textSize="23sp"
            android:textStyle="italic"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/name_Edit_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your name here! "
                android:inputType="text"
                android:textColor="@android:color/black"
                android:layout_margin="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:background="#cdc9c9"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/Q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="question: 1"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When do you usually getting bored?"
                android:textSize="17sp"
                android:gravity="center_vertical"/>
        </LinearLayout>


        <CheckBox
            android:id="@+id/checkbox_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="While Traveling" />

        <CheckBox
            android:id="@+id/checkbox_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="At School" />

        <CheckBox
            android:id="@+id/checkbox_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="At Work" />

        <CheckBox
            android:id="@+id/checkbox_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="With Friend" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/other_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
        <EditText
            android:id="@+id/other_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other"
            android:inputType="text"
            android:layout_toRightOf="@+id/other_checkbox"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:background="#cdc9c9"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
           >

            <TextView
                android:id="@+id/Q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="question: 2"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/question2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="How do you usually feel bored?"
                android:textSize="17sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_text_Q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write your answer here"
            android:layout_margin="12dp"
            android:textColor="@android:color/black"
            android:inputType="text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:background="#cdc9c9"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/title_Q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="question: 3"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/question3_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="What do you think of our content?"
                android:textSize="17sp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

        <RadioButton
            android:id="@+id/veryGood_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very Good"
            android:textSize="17sp"
            android:layout_margin="5dp"
            android:paddingRight="10dp"
       />
        <RadioButton
            android:id="@+id/good_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good"
            android:textSize="17sp"
            android:layout_margin="5dp"
            android:paddingRight="10dp"
           />
            <RadioButton
                android:id="@+id/notGood_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Good"
                android:textSize="17sp"
                android:layout_margin="5dp"
                android:paddingRight="10dp"
                />
        </RadioGroup>

        <TextView
            android:id="@+id/title_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cdc9c9"
            android:text="Summary:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            />


        <TextView
            android:id="@+id/summary_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_margin="12dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/submit_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:background="#cdc9c9"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:onClick="submitButton"
          />
    </LinearLayout>

</ScrollView>
